<html>
    <head>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <title>
            <%= locals.title%>
        </title>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
            <div class="notebook">
                          <ul>
                   
                <% for (let i of contact_list) { %> 
                   <div class="contact"> 
                        <li>
                                <i class="fa fa-address-book" aria-hidden="true"></i> <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                            <p><%= i.email %></p>

                            <div class="delete-button">
                                <a href="/delete-contact/?id=<%= i.id %>">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </a>
                            </div>
        
                        </li>
                    </div>
                                    <% } %>
            </ul>

        <form action="/create-contact" method="POST" class="enter">
            
            <input type="text" name="name" placeholder="Enter name" required><br />
            <input type="number" name="phone" placeholder="Enter phone" required><br />
            <input type="text" name="email" placeholder="Enter Email" required><br />
            
            <button type="submit">Add contact</button>
        </form>
    </div>
 
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>